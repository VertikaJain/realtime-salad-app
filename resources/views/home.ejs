<section class="hero py-10">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are You Hungry?</em></h6>
            <h1 class="text-6xl font-bold">Don't Wait!</h1>
            <button class="btn-primary px-6 py-2 text-white rounded-full font-bold mt-4">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/images/bowl.png" alt="bowl">
        </div>
    </div>
</section>
<section id="saladMenu" class="menu container mx-auto py-4 px-2">
    <h1 class="text-xl font-bold p-4 mb-4 text-center text-2xl">All Salads</h1>
    <div class="grid grid-cols-4 col-gap-12 row-gap-16">
        <%salads.forEach( salad => { %>
        <div class="w-64">
            <img class="h-40 mb-4 mx-auto" src="/images/<%=salad.image%>">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%=salad.name%></h2>
                <span class="yield px-4 py-1 rounded-full uppercase text-xs"><%=salad.yield%></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%=salad.price%></span>
                    <button class="add-to-cart px-6 py-1 rounded-full flex items-center font-bold"
                        data-salad="<%= JSON.stringify(salad) %>">
                        <span>+</span>
                        <span class="ml-2">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</section>